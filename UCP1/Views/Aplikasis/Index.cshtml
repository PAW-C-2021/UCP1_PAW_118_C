@model IEnumerable<UCP1.Models.Aplikasi>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("AdventureGenre")
            </th>
            <th>
                @Html.DisplayName("ActionGenre")
            </th>
            <th>
                @Html.DisplayName("FantasyGenre")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdventureGenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActionGenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FantasyGenre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAplikasi"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdAplikasi"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdAplikasi"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
